<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="springcloud.payment.mapper.PaymentMapper">
    <insert id="insert" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) value (#{serial})
    </insert>

    <resultMap id="BaseResultMap" type="springcloud.customer.mapper.PaymentMapper">
        <id column="id" property="id" jdbcType="BIGINT" javaType="Long"/>
        <result column="serial" property="serial" jdbcType="VARCHAR" javaType="String"/>
    </resultMap>
    <select id="selectOne" parameterType="Long" resultMap="BaseResultMap">
        select *
        from payment
        where id = #{id}
    </select>

    <resultMap id="ListMap" type="springcloud.customer.mapper.PaymentMapper">
        <id column="id" property="id" jdbcType="BIGINT" javaType="Long"/>
        <result column="serial" property="serial" jdbcType="VARCHAR" javaType="String"/>
    </resultMap>
    <select id="selectAll" resultMap="ListMap">
        select *
        from payment
    </select>
</mapper>